{
    "name": "programmingarehard/resource-bundle",
    "type": "symfony-bundle",
    "description": "Symfony bundle that helps in developing REST APIs.",
    "keywords": [
        "REST",
        "API",
        "json"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "David Adams",
            "email": "adams.david.10@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "symfony/framework-bundle": "~2.1",
        "symfony/form": "~2.1",
        "symfony/security-bundle": "~2.1",
        "friendsofsymfony/rest-bundle": "1.3.*",
        "doctrine/inflector": "1.0.*"
    },
    "require-dev": {
        "doctrine/orm": "~2.3",
        "phpspec/phpspec": "2.1.*@dev"
    },
    "suggest": {
        "jms/serializer-bundle": "Add support for advanced serialization capabilities, recommended, requires 0.12.*"
    },
    "autoload": {
        "psr-0": {
            "ProgrammingAreHard\\ResourceBundle": ""
        }
    },
    "minimum-stability": "dev",
    "target-dir": "ProgrammingAreHard/ResourceBundle",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}